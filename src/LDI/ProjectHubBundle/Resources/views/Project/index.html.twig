{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Tags</th>
                <th>Featureimageurl</th>
                <th>Status</th>
                <th>Createdtimestamp</th>
                <th>Videourl</th>
                <th>Fileshareurl</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.tags }}</td>
                <td>{{ entity.featureImageUrl }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.createdTimestamp %}{{ entity.createdTimestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.videoUrl }}</td>
                <td>{{ entity.fileShareUrl }}</td>
                <td>{{ entity.location }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('project_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
